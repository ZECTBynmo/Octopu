<h1>Available builds</h1>

<ul>
    <% _.each( builds, function(build, iBuild) { %>
        <% if( !build.expired ) { %>
            <li>
                <div class="well">
                    <div class="span2">
                        <a href="/builds/edit/<%- build.name %>"><h4 class="build-name"><%- build.name %></h4></a>
                    </div>
                    <div class="span2">
                        Type: <u><%- build.type %></u>
                    </div>
                    <div class="span1 pull-right">
                        <button class="btn delete-btn" type="button">delete</button>
                    </div>
                </div>
            </li>        
        <% } %>
    <% }); %>  
</ul>

<script>
    $('.delete-btn').click( function(event) {
        var path = "/builds/delete/" + $(".build-name").eq( $(this).parent().index() ).text();

        console.log( path );
        
        socket.get( path, function(data) {
            console.log( data );
        });
    });
</script>